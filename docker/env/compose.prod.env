# Docker Compose production variables
# Copy to: docker/env/compose.prod.env (DO NOT commit secrets)

APP_ENV=production
APP_DEBUG=false

# Domain + Public URL (IMPORTANT: used for Laravel APP_URL and /storage URLs)
DOMAIN=nazim.cloud
APP_URL=https://nazim.cloud

# Optional: used for preflight DNS verification
SERVER_IP=168.231.125.153

# Exposed HTTP port
HTTP_PORT=80

# Exposed HTTPS port
HTTPS_PORT=443

# Let's Encrypt email (required for issuing certs)
LETSENCRYPT_EMAIL=admin@nazim.cloud

# Postgres credentials (db container)
POSTGRES_DB=nazim
POSTGRES_USER=nazim
POSTGRES_PASSWORD=change_me

# Frontend build-time API base (same-origin defaults are fine)
VITE_API_BASE_URL=/api
VITE_API_URL=/api

# pgAdmin configuration (database administration tool)
PGADMIN_EMAIL=admin@nazim.cloud
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# FileBrowser (storage file manager: browse private/public, preview images/PDFs; localhost only)
FILEBROWSER_USER=admin
FILEBROWSER_PASSWORD=changeme
FILEBROWSER_PORT=8081
