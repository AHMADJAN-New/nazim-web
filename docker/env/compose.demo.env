# Docker Compose demo environment variables
# Copy to: docker/env/compose.demo.env (DO NOT commit secrets)

APP_ENV=demo
APP_DEBUG=false

# Domain + Public URL (IMPORTANT: used for Laravel APP_URL and /storage URLs)
DOMAIN=demo.nazim.cloud
APP_URL=https://demo.nazim.cloud

# Optional: used for preflight DNS verification
SERVER_IP=168.231.125.153

# Exposed HTTP port (must be allowed in firewall)
# Using different ports from production to keep environments separate
HTTP_PORT=8080

# Exposed HTTPS port (must be allowed in firewall)
HTTPS_PORT=8443

# Note: After setting up Docker, configure firewall:
#   sudo bash docker/scripts/prod/setup-firewall.sh
#   (Script will detect both prod and demo ports)

# Let's Encrypt email (required for issuing certs)
LETSENCRYPT_EMAIL=admin@nazim.cloud

# Postgres credentials (db container - separate from production)
POSTGRES_DB=nazim_demo
POSTGRES_USER=nazim_demo
POSTGRES_PASSWORD=change_me

# Frontend build-time API base (same-origin defaults are fine)
VITE_API_BASE_URL=/api
VITE_API_URL=/api

