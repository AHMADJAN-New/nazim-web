# Docker Compose production variables
# Copy to: docker/env/compose.prod.env (DO NOT commit secrets)

APP_ENV=production
APP_DEBUG=false

# Domain + Public URL (IMPORTANT: used for Laravel APP_URL and /storage URLs)
DOMAIN=nazim.cloud
APP_URL=https://nazim.cloud

# Optional: used for preflight DNS verification
SERVER_IP=168.231.125.153

# Exposed HTTP port (must be allowed in firewall)
HTTP_PORT=80

# Exposed HTTPS port (must be allowed in firewall)
HTTPS_PORT=443

# Note: After setting up Docker, configure firewall:
#   sudo bash docker/scripts/prod/setup-firewall.sh

# Let's Encrypt email (required for issuing certs)
LETSENCRYPT_EMAIL=admin@nazim.cloud

# Postgres credentials (db container)
POSTGRES_DB=nazim
POSTGRES_USER=nazim
POSTGRES_PASSWORD=change_me

# Frontend build-time API base (same-origin defaults are fine)
VITE_API_BASE_URL=/api
VITE_API_URL=/api

# pgAdmin configuration (database administration tool)
# Access at http://localhost:${PGADMIN_PORT} (default: 5050)
PGADMIN_EMAIL=admin@nazim.cloud
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# FileBrowser (read-only storage file manager: browse private/public storage, preview images/PDFs)
# Access at http://<server-ip>:${FILEBROWSER_PORT}. Password must be at least 12 characters.
# If login says "wrong credentials", run: bash docker/scripts/maintenance/filebrowser-set-admin-password.sh
FILEBROWSER_USER=admin
FILEBROWSER_PASSWORD=changeme123456
FILEBROWSER_PORT=8081
