{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Frontend: Start Dev Server",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": true,
                "group": "dev-servers"
            },
            "isBackground": true,
            "runOptions": {
                "runOn": "default"
            }
        },
        {
            "label": "Backend: Start Laravel Server",
            "type": "shell",
            "command": "php artisan serve",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": true,
                "group": "dev-servers"
            },
            "isBackground": true,
            "runOptions": {
                "runOn": "default"
            }
        },
        {
            "label": "Backend: Start Queue Worker",
            "type": "shell",
            "command": "php artisan queue:work --tries=1",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": true,
                "group": "dev-servers"
            },
            "isBackground": true,
            "runOptions": {
                "runOn": "default"
            }
        },
        {
            "label": "Start All Servers",
            "dependsOn": [
                "Frontend: Start Dev Server",
                "Backend: Start Laravel Server",
                "Backend: Start Queue Worker"
            ],
            "dependsOrder": "parallel",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": true,
                "clear": true,
                "group": "dev-servers"
            },
            "runOptions": {
                "runOn": "default"
            }
        }
    ]
}